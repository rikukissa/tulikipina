@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,300,700|Roboto+Condensed')

@font-face
  font-family 'Bebas'
  src url('/fonts/BebasNeue Regular.ttf') format('truetype')

@import 'variables'
@import 'layout'
@import 'components'

// Views

#home
  .cover:first-child
    height 700px
    h1
      font-size 8em
      font-size 9vw
      font-weight 700
    h2
      font-size 4em
      font-size 4vw
    @media breakpoint1
      height 400px

  .view-content
    z-index 2
    position relative
  .view-content:last-child
    box-shadow 0px -1px 1px rgba(0, 0, 0, 0.2)

  .cover:first-child
    overflow hidden
    background-image url('../images/covers/index.jpg')
    video
      position absolute
      top 0
      right 0px
      min-width 100%
      min-height 100%
      width auto
      height auto


.cover-instagram
  overflow hidden
  height auto
  min-height 300px
  @media breakpoint4
    min-height auto

#summer
  .grid-row:first-child
    .grid-item
      width 50%
      @media breakpoint4
        width auto

#summer, #winter
  .view-content
    padding-bottom 0

#renting
  .view-content
    padding-top 0
