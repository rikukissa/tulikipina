
.contacts__list
  margin 0
  padding 0
  list-style none
  display block
  li
    padding 0.5em 0
    padding-left 1.5em
    position relative
    i
      position absolute
      top 50%
      left 0
      margin-top -0.5em

  p // Markdown creates paragraph for email
    margin 0

#contacts
  background #d2d2d2

#contacts
  .column3-3
    padding 1em 2em
    background #fff
    box-shadow 1px 1px 1px rgba(0, 0, 0, 0.05)
    z-index 2
    margin-bottom 1em
    h3
      margin-top 0.5em
      padding-bottom 0.5em
      border-bottom 1px solid borderColor